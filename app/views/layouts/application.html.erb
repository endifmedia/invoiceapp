<!DOCTYPE html>
<html>
  <head>
    <title>SMB Company - Invoicing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="https://fonts.googleapis.com/css?family=Major+Mono+Display" rel="stylesheet">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="is-preload">
		<!-- Wrapper -->
<div id="wrapper">

	<!-- Header -->
	<header id="header">
		<div class="inner">

		<!-- Logo -->
			<a href="/" class="logo">
				<span class="title">
					<ul>
						<li>SMB</li>
						<li>Company</li>
					</ul>
				</span>
			</a>

		<!-- Nav -->
			<nav>
				<ul>
					<li><a href="#menu">Menu</a></li>
				</ul>
			</nav>

		</div>
	</header>

	<!-- Menu -->
	<nav id="menu">
		<h2>Menu</h2>
		<ul>
			<li><a href="/clients">Clients</a></li>
			<li><a href="/">Invoices</a></li>
		</ul>
	</nav>

	<!-- Main -->
	<div id="main">
		<div class="inner">

	    <%= yield %>

		</div>
	</div>

<!-- Footer -->
	<footer id="footer">
		<div class="inner">
			<ul class="copyright">
				<li>&copy; Invoice DOOD. All rights reserved</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
			</ul>
		</div>
	</footer>

	</div>

<!-- Scripts -->
    <%#= javascript_include_tag "browser" %>
	<%#= javascript_include_tag "breakpoints" %>
	<%#= javascript_include_tag "utils" %>
    <%= javascript_include_tag "main" %>
	<!--<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/browser.min.js"></script>
	<script src="assets/js/breakpoints.min.js"></script>
	<script src="assets/js/util.js"></script> 
	<script src="assets/js/main.js"></script>-->

	</body>
</html>
